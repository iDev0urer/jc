/**
 *
 * SOME HELPFUL OPTIONS
 * at the top for convenience sake
 *
 **/

$hover-effects              = true
$enable-flex                = true
$enable-grid                = true
$rounded-corners            = true
$animations-on              = true
$enable-hover-media-query   = false

/**
 *
 * SPACING
 *
 **/

spacer                      = 1rem
spacer-x                    = spacer
spacer-y                    = spacer
spacers = {
  '0': {
    x: 0,
    y: 0
  },
  '1': {
    x: spacer-x,
    y: spacer-y
  },
  '2': {
    x: (spacer-x * 1.5),
    y: (spacer-y * 1.5)
  },
  '3': {
    x: (spacer-x * 3),
    y: (spacer-y * 3)
  }
}
border-width                 = 1px

/**
 *
 * COLORS
 *
 **/

percentage-offset-1 := 25%
percentage-offset-2 := 80%
percentage-offset-3 := 95%

// Hash of default colors
colors = {
  orange: #febd38,
  blue: #448AFF,
  teal: #009688,
  yellow: #d0c036,
  red: #F44336,
  gray: #929292,
  grey: #929292,
  green: #8dc63f,
  white: #ffffff,
  primary: #00bce4,
  secondary: #f47721,
}

// Loop through the hash and make variables for light and
// dark variations of the colors
for name, color in colors
  define(name + '-light', lighten(color, percentage-offset-1))
  define(name + '-lighter', lighten(color, percentage-offset-2))
  define(name + '-lightest', lighten(color, percentage-offset-3))
  define(name, color)
  define(name + '-dark', darken(color, percentage-offset-1))
  define(name + '-darker', darken(color, percentage-offset-2))
  define(name + '-darkest', darken(color, percentage-offset-3))

// Some bonus colors
facebook-blue                = #3b5998
twitter-blue                 = #55acee
gplus-red                    = #DC4E41
pinterest-red                = #C92228

